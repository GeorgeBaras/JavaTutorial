<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
  <Appenders>
  
  <File name="MyFile" append="false" fileName="logs/app.log">
   <PatternLayout>
    <Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
   </PatternLayout>
   <ThresholdFilter level="TRACE" onMatch="ACCEPT" onMismatch="DENY"/>
  </File>
  
      
  <Console name="Console" target="SYSTEM_OUT">
    <PatternLayout>
    <Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
   </PatternLayout>
   <ThresholdFilter level="TRACE" onMatch="ACCEPT" onMismatch="DENY"/>
  </Console>
  
  <Console name="ConsoleError" target="SYSTEM_Err">
	<PatternLayout>
    <Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
    </PatternLayout>
	<ThresholdFilter level="ERROR" onMatch="ACCEPT" onMismatch="DENY"/>
  </Console>
  
  <Async name="AsyncAppender">
	<AppenderRef ref="MyFile"/>
  </Async>
  
  <SMTP name="Email" subject="Error log" to="george.baras@sword-apak.com" smtpHost="mail1">
		<PatternLayout>
    		<Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
    	</PatternLayout>
   </SMTP>

  </Appenders>
  
  <Loggers>
  
    <Root level="TRACE">
      <AppenderRef ref="AsyncAppender"/>
      <!--  <AppenderRef ref="Email"/>   -->
    </Root>
	
    <logger name="com.apakgroup.training.tutorial.pricing.cap" level="DEBUG">
		<AppenderRef ref="Console"/>
	</logger>
   
    
  </Loggers>
</Configuration>